---
 
- name: alteracao e geracao da senha
  set_fact:
    my_pass: "{{ lookup('password', '/dev/null length=7 chars=ascii_letters') }}"
- name: Change user password
  ansible.builtin.user:
    name: guilherme6
    state: present
    password: "{{ my_pass }}"
  register: pass_output
- name: senha gerada
  ansible.builtin.copy:
    content: "{{pass_output}}"
    dest: /home/guilherme/out1.log
   
...
